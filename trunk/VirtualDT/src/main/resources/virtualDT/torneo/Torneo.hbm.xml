<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
        <!-- private List<Partido> partidos = new Vector<Partido>();
	private List<ResultadoDelPartido> resultados= new Vector<ResultadoDelPartido>(); -->
	
<hibernate-mapping>
	<class name="virtualDT.torneo.Torneo" table="TORNEO">
		<id name="idP" type="java.lang.Integer">
			<column name="ID_TORNEO"></column>
			<generator class="identity"></generator>
		</id>
		<discriminator column="TipoDePartido" type="string" />
		
		<bag name="partidos" cascade="all">
			<key column="partidos"/>
			<one-to-many class="virtualDT.equipo.Partido" />
		</bag>
		<bag name="resultados" cascade="all">
			<key column="resultados" />
			<one-to-many class="virtualDT.equipo.Resultado" />
		</bag>

		<subclass name="virtualDT.torneo.TorneoDeCopa"
			discriminator-value="TDC" />
		<subclass name="virtualDT.torneo.TorneoContraTodo"
			discriminator-value="TCT" />

	</class>
</hibernate-mapping>